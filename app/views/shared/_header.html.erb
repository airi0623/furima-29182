<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-btn", id: "category-btn" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-btn", id: "brand-btn" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>

  <!--カテゴリーリスト-->
    <ul class='show-list', id="pull-down-category" >
      <li class ='category-list'><%= link_to 'レディース', new_user_session_path, class: "login" %>レディース</li>
      <li class ='category-list'>メンズ</li>
      <li class ='category-list'>ベビー・キッズ</li>
      <li class ='category-list'>本・音楽</li>
      <li class ='category-list'>おもちゃ</li>
      <li class ='category-list'>家電・スマホ・カメラ</li>
      <li class ='category-list'>ハンドメイド</li>
      <li class ='category-list'>その他</li>
    </ul>
    <!--カテゴリーリスト-->
</header>


